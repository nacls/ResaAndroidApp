<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/curved_white_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350sp"
        android:background="@drawable/upper_curved_green_background"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/add_new_member_to_board"
                android:fontFamily="@font/sahelfd"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/add_user_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:hint="@string/username_hint"
            android:textColorHint="@color/grey_light1"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:autofillHints="@string/username_hint"
            android:layout_marginEnd="5dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sahelfd"
            android:text="@string/user_name"
            android:textColor="@color/grey_dark"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="15dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sahelfd"
            android:text="@string/add_as_writer"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/is_writer_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:buttonTint="@color/grey"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_user_button"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/curved_button_light"
            android:clickable="true"
            android:text="@string/submit"
            android:fontFamily="@font/sahelfd"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:focusable="true" />
    </LinearLayout>
</LinearLayout>