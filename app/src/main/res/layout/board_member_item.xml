<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_item_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/member_border"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/member_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/memberFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:fontFamily="@font/sahelfd"
                android:gravity="center|start"
                android:text="@string/default_text"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/boardMembershipIv"
                android:background="@drawable/creator_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/memberUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="37dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:fontFamily="@font/sahelfd"
            android:text="@string/board_id"
            android:textColor="@color/grey"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>