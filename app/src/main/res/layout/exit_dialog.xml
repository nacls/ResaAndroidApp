<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/curved_white_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:background="@drawable/upper_curved_green_background"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/exit_question_tv"
                android:gravity="center"
                android:text="@string/default_text"
                android:fontFamily="@font/sahelfd"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_no"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="@string/no"
            android:fontFamily="@font/sahelfd"
            android:textColor="@color/dark_shade2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:focusable="true" />

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:clickable="true"
            android:text="@string/yes"
            android:fontFamily="@font/sahelfd"
            android:textColor="@color/dark_shade2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:focusable="true" />
    </LinearLayout>
</LinearLayout>